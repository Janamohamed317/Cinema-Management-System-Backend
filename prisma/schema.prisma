generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  HALL_MANAGER
  USER
  TICKETS_MANAGER
  SNACKS_MANAGER
  MOVIES_MANAGER
  UNASSIGNED
}

enum HallType {
  REGULAR
  VIP
}

enum ScreenType {
  TWO_D
  THREE_D
  IMAX
  SCREEN_X
}

enum SeatStatus {
  ACTIVE
  UNDER_MAINTENANCE
  PERMANENTLY_REMOVED
}

enum TicketStatus {
  PAID
  PENDING
  REFUNDED
  CANCELLED
}

enum TransactionStatus {
  COMPLETED
  REJECTED
  PENDING
  REFUNDED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
}

model User {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  email        String        @unique
  username     String        @unique
  password     String
  role         Role          @default(USER)
  verified     Boolean       @default(false)
  deletedAt    DateTime?
  tickets      Ticket[]
  transactions Transaction[]

  @@index([deletedAt])
}

model Movie {
  id         String      @id @default(uuid())
  createdAt  DateTime    @default(now())
  name       String      @unique
  duration   Int
  deletedAt  DateTime?
  screenings Screening[]

  @@index([deletedAt])
}

model Hall {
  id          String      @id @default(uuid())
  name        String      @unique
  type        HallType
  screenType  ScreenType
  seatsNumber Int
  deletedAt   DateTime?
  screenings  Screening[]
  seats       Seat[]

  @@index([deletedAt])
}

model Screening {
  id        String    @id @default(uuid())
  hall      Hall      @relation(fields: [hallId], references: [id])
  movie     Movie     @relation(fields: [movieId], references: [id])
  hallId    String
  movieId   String
  startTime DateTime
  deletedAt DateTime?
  tickets   Ticket[]

  @@unique([hallId, startTime])
  @@index([deletedAt])
}

model Seat {
  id         String     @id @default(uuid())
  status     SeatStatus @default(ACTIVE)
  seatNumber Int
  hall       Hall       @relation(fields: [hallId], references: [id])
  hallId     String
  createdAt  DateTime   @default(now())
  deletedAt  DateTime?
  tickets    Ticket[]

  @@unique([hallId, seatNumber])
  @@index([deletedAt])
}

model Ticket {
  id            String       @id @default(uuid())
  status        TicketStatus
  screening     Screening    @relation(fields: [screeningId], references: [id])
  screeningId   String
  user          User         @relation(fields: [userId], references: [id])
  userId        String
  seat          Seat         @relation(fields: [seatId], references: [id])
  seatId        String
  price         Decimal      @db.Decimal(10, 2)
  createdAt     DateTime     @default(now())
  deletedAt     DateTime?
  transactionId String
  transaction   Transaction  @relation(fields: [transactionId], references: [id])

  @@unique([screeningId, seatId])
  @@index([deletedAt, userId])
}

model Transaction {
  id            String            @id @default(uuid())
  status        TransactionStatus @default(PENDING)
  userId        String
  user          User              @relation(fields: [userId], references: [id])
  totalAmount   Decimal           @db.Decimal(10, 2)
  tickets       Ticket[]
  createdAt     DateTime          @default(now())
  paymentMethod PaymentMethod

  @@index([userId, status])
}
