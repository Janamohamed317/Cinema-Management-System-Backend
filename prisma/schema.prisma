generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  email     String    @unique
  username  String    @unique
  password  String
  role      Role      @default(USER)
  verified  Boolean   @default(false)
  deletedAt DateTime?

  @@index([deletedAt])
}

enum Role {
  SUPER_ADMIN
  USER
  TICKETS_MANAGER
  SNACKS_MANAGER
  MOVIES_MANAGER
  EMPLOYEE
  UNASSIGNED
}

model Movie {
  id         String      @id @default(uuid())
  createdAt  DateTime    @default(now())
  name       String      @unique
  duration   Int
  deletedAt  DateTime?
  screenings Screening[]

  @@index([deletedAt])
}

model Hall {
  id         String      @id @default(uuid())
  name       String      @unique
  type       String
  seats      Int
  deletedAt  DateTime?
  screenings Screening[]

  @@index([deletedAt])
}

model Screening {
  id        String    @id @default(uuid())
  movie     Movie     @relation(fields: [movieId], references: [id])
  hall      Hall      @relation(fields: [hallId], references: [id])
  movieId   String
  startTime DateTime
  endTime   DateTime
  deletedAt DateTime?
  hallId    String

  @@index([deletedAt])
}
