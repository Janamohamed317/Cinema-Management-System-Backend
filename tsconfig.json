{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}